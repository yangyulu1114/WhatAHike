<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.UserSetting">

    <TextView
        android:id="@+id/activityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the activities that you're interested in:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <CheckBox
        android:id="@+id/Birding"
        android:layout_width="121dp"
        android:layout_height="27dp"
        android:text="Birding"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="131dp" />

    <CheckBox
        android:id="@+id/hiking"
        android:layout_width="121dp"
        android:layout_height="25dp"
        android:text="Hiking"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="131dp" />

    <CheckBox
        android:id="@+id/naturetrips"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:text="Nature-trips"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="174dp" />

    <CheckBox
        android:id="@+id/trailrunning"
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:text="Trail-running"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="173dp" />

    <CheckBox
        android:id="@+id/fishing"
        android:layout_width="138dp"
        android:layout_height="31dp"
        android:text="Fishing"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="218dp" />

    <CheckBox
        android:id="@+id/walking"
        android:layout_width="127dp"
        android:layout_height="29dp"
        android:text="Walking"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="221dp" />

    <TextView
        android:id="@+id/preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preference Setting"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="65dp" />

    <CheckBox
        android:id="@+id/seaKayaking"
        android:layout_width="139dp"
        android:layout_height="30dp"
        android:text="Sea-kayaking"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="264dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
