<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.activity.UserSetting">

    <TextView
        android:id="@+id/activityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the activities that you're interested in:" />

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/birding"
        android:text="Birding"/>

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/hiking"
        android:text="Hiking"/>
    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/naturetrips"
        android:text="Natural-trips"/>
    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/trailrunning"
        android:text="Trail-running"/>
    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/fishing"
        android:text="Fishing"/>
    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/walking"
        android:text="Walking"/>
    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seakayaking"
        android:text="Sea-kayaking"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out" />

</LinearLayout>
